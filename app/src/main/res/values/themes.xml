<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base app theme. -->
    <style name="Theme.Dotty" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <!-- Primary theme color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary theme color. -->
        <item name="colorSecondary">@color/purple_300</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Style to apply to TextViews that are primary labels. -->
    <style name="primaryLabel">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <!-- Style to apply to TextViews that are numbers. -->
    <style name="number">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

</resources>